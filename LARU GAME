// JavaScript Code Adjustments for Staggered Visibility

function loadQuestion(questionIndex) {
    // Define sections to toggle visibility
    const sections = {
        0: "ðŸ“» You Have Been Dispatched",
        1: "ðŸ¡ Arriving at Scene",
        2: "âœ… Consent Obtained"
    };

    // Iterate over sections to adjust their visibility
    Object.keys(sections).forEach((index) => {
        const section = document.querySelector(`[data-section='${sections[index]}']`);
        if (section) {
            if (parseInt(index) <= questionIndex) {
                section.style.display = 'block';
            } else {
                section.style.display = 'none';
            }
        }
    });

    // Load the question for the given index (existing logic assumed)
    // ...
}

function buildDynamicSections() {
    // Example function to build or render sections
    const container = document.getElementById("game-sections-container");
    if (container) {
        const sections = [
            "ðŸ“» You Have Been Dispatched",
            "ðŸ¡ Arriving at Scene",
            "âœ… Consent Obtained"
        ];

        sections.forEach((sectionTitle, index) => {
            let sectionElement = document.createElement("div");
            sectionElement.setAttribute("data-section", sectionTitle);
            sectionElement.style.display = index === 0 ? 'block' : 'none'; // Default visibility
            sectionElement.innerHTML = `<h2>${sectionTitle}</h2>`;

            container.appendChild(sectionElement);
        });
    }
}

